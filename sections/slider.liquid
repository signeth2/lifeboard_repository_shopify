<div class="container">
    <h2 class="h1 text-align-center-mobile">{{ section.settings.slider_heading }}</h2>
    <div class="slider">

        <div class="slides">
            {% for block in section.blocks %}
                <a href="{{ block.settings.slider_url }}">
                    <p class="client-case-name" style="color: white;">{{ block.settings.slider_header }}</p>
                    <img src="{{ block.settings.slider_image | image_url }}" alt="">
                    <p  class="client-case-name" style="color: white;">{{ block.settings.slider_description }}</p>
                </a>
            {% endfor %}
        </div>

        <button class="prev">{% render 'icon-chevron-left' %}</button>
        <button class="next">{% render 'icon-chevron-right' %}</button>
    </div>
    
</div>


{% schema %}
    {
        "name": "slider",
        "settings": [
            {
                "type": "text",
                "id": "slider_heading",
                "label": "Heading",
                "default": "Heading"
            }
         
            ],
            "blocks": [
                {
                    "name": "slider",
                    "type": "slider",
                    "settings": [
                        {
                            "type": "image_picker",
                            "id": "slider_image",
                            "label": "Image"
                        },
                        {
                            "type": "url",
                            "id": "slider_url",
                            "label": "Url client case page"
                        },
                        {
                            "type": "text",
                            "id": "slider_header",
                            "label": "Header"
                        },
                        {
                            "type": "text",
                            "id": "slider_description",
                            "label": "Description"
                        }
                        
                        
                        
                    ]
                }
            ],
            "presets": [
                    {
                        "name": "Slider"
                    }
                ]
    }
    {% endschema %}